// Placeholder for future persistence
// To use: set DATABASE_URL in .env and run: npx prisma migrate dev --name init
// For now, app is stateless.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Analysis {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  jd        String
  resume    String
  result    Json
}